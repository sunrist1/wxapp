@import "index-top.wxss";

.root {
    background: #efeff4;
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom:0;
}
.line {
    padding-top: 30rpx;
}
.line text {
    color: #6D6D72;
    font-size: 28rpx;
    margin-left: 40rpx;
}
.line-control {
    border-bottom: #d9d9d9 1px solid;
    border-top: #d9d9d9 1px solid;
    background-color: #fff;
    margin-top: 10rpx;
}
.line-control .item {
    box-sizing: border-box;
    text-align: left;
    color: #007AFF;
    font-size: 32rpx;
    padding-left: 40rpx;
    position: relative;
}
.line-control .item:active {
    background: #d9d9d9;
}
.line-control .item.flag {
    color: #333;
}
.line-control .item.flag:active {
    background: #fff;
}
.line-control .item-inner {
    border-bottom: #d9d9d9 1px solid;
    height: 90rpx;
    line-height: 90rpx;
}
.line-control .item-image {
    text-align: center;
}
.line-control .item.button {
    padding: 10px 20px;
}
.line-control .item.button:active {
    background-color: #fff;
}
.line-control .item-image .image {
    width: 380rpx;
    height: 380rpx;
    text-align: center;
    margin: 10rpx;
}
.line-control .item:last-child .item-inner {
     border:none;
}
.line-control .switch {
    vertical-align: middle;
    line-height: normal;
}
.line-control text {
    display: inline-block;
    vertical-align: middle;
    margin-right: 10rpx;
    color: #8E8E93;
    margin-left: 0;
}
.line-control .switch-status {
    color: #999;
    position: absolute;
    right: 40rpx;
    top: 0;
}
.line-control .item.disabled {
    color: #999
}
.line-control .item.disabled:active {
    background: none;
}
.line .demo {
    height: 90rpx;
    line-height: 90rpx;
    box-sizing: border-box;
    text-align: left;
    color: #333;
    background-color: #fff;
    position: relative;
    font-size: 32rpx;
    padding-left: 40rpx;
}
.line .demo .link {
    position: absolute;
    right: 40rpx;
    top: 0rpx;
    color: #8E8E93;
}
.hide {
    display: none
}

@media (max-width : 360px) {
    .line text {
        font-size: 36rpx;
    }
    .line-control .item-inner {
        border-bottom: #d9d9d9 1px solid;
        height: 110rpx;
        line-height: 110rpx;
    }
    .line-control .item {
        height: 110rpx;
        line-height: 110rpx;
        box-sizing: border-box;
        text-align: left;
        color: #007AFF;
        font-size: 38rpx;
        padding-left: 40rpx;
        position: relative
    }
    .line .demo {
        height: 110rpx;
        line-height: 110rpx;
        font-size: 38rpx;
        padding-left: 40rpx;
    }
}

.avatar-img{
  width:200rpx;
  height: 200rpx;
  border-radius: 50%;
  display: block;
  margin:0 auto;
  
}
.avatar-box{
  position: relative;
}
.avatar-box::before{
  content:"";
  width:220rpx;
  height: 220rpx;
  border:2px solid #978dff;
  position: absolute;
  top:-10rpx;
  left:50%;
  transform: translateX(-50%);
  border-radius: 50%;
  clip:rect(150rpx,222rpx,230rpx,0rpx); 
}
 .avatar-box::after{
  content:"";
  border-radius: 50%;
  width:220rpx;
  height: 220rpx;
  border:2px solid #978dff;
  position: absolute;
  bottom:-10rpx;
  left:50%;
  transform: translateX(-50%);
  clip:rect(0rpx,230rpx,90rpx,0rpx); 
} 
