.rank-box .tab-title .tab-item{
  width:33%;
  border-top-left-radius: 25rpx;
  border-top-right-radius: 25rpx;
  text-align: center;
  display: inline-block;
  height:80rpx;
  color:#fff;
  line-height: 80rpx;
  filter:brightness(0.55);
}

.rank-box .tab-title .active{
  filter:brightness(1);
}

.rank-box .tab-title .tab-item:nth-of-type(1){
  background: linear-gradient(45deg,#ff8448,#fe4f4c);
}
.rank-box .tab-title .tab-item:nth-of-type(2){
  background: linear-gradient(45deg,#6889ff,#7f6efc);
}
.rank-box .tab-title .tab-item:nth-of-type(3){
  background: linear-gradient(45deg,#8a41f3,#9a1fec);
}

.rank-box .rank-list{
  width:90%;
  display: inline-block;
  margin-top:5rpx;
}
.rank-box .rank-list .list-box{
  margin-top:20rpx;
}
.rank-box .rank-list .list-box .list-item{
  border-bottom: 1px solid #efeff4;
}
.rank-box .rank-list .list-box,
.rank-box .rank-list .pers-rank{
  background-color: #fff;
  padding:5rpx 15rpx;
  text-align: left;
}
.rank-box .rank-list .list-box .list-item .index-num,
.rank-box .rank-list .pers-rank .index-num{
  display: inline-block;
  vertical-align:middle;
}
.rank-box .rank-list .list-box .list-item .avatar-img,
.rank-box .rank-list .pers-rank .avatar-img{
  display: inline-block;
  width:100rpx;
  height:100rpx;
  vertical-align:middle;
  margin:25rpx;
}

.rank-box .rank-list .pers-rank .avatar-img{
  margin-left: 30rpx;
}
.rank-box .rank-list .list-box .list-item .step-num,
.rank-box .rank-list .pers-rank .step-num{
  color:#fe514d;
  font-size:60rpx;
  /* margin-left:60rpx;
  vertical-align:middle; */
  float:right;
  margin-top:35rpx;
}

.rank-box .rank-list .list-box .list-item .itemRankNum,
.rank-box .rank-list .pers-rank .selfRankNum{
  min-width: 100rpx;
  max-width: 250rpx;
  vertical-align: middle;
  display: inline-block;
  margin-left:10rpx;
  font-size: 30rpx;
}

.rank-box .rank-list .list-box .list-item .itemRankNum text,
.rank-box .rank-list .pers-rank .selfRankNum text{
  display: block;
  overflow:hidden;
  white-space:nowrap;
  text-overflow:ellipsis;
}

.rank-box .rank-list .list-box .list-item .itemRankNum .company,
.rank-box .rank-list .pers-rank .selfRankNum .rankNum{
  color:#aaa;
  font-size: 28rpx;
  margin-top:5rpx;
}

.rank-box .rank-list .pers-rank .self-noData-tips{
  font-size:30rpx;
  text-align:center;
  height:80rpx;
  line-height:80rpx;
  width:100%;
  display:block;
}

