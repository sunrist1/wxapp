.rank-box{
  padding:15rpx;
  text-align: center;
  background-color:#efeff4;
  padding-bottom:50rpx;
}
.rank-box .tab-title{
  display: inline-flex;
  flex-direction: row;
  width:90%;
  margin:0 auto;
  justify-content: space-between;
}
